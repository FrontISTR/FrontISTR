DEBUGFLAGS               = -g
F90DEBUGFLAGS            = -g

FSTREXEC_TARGETFILE      = fistr1
FSTRLIB_TARGETFILE       = libfistr.a
FSTRLIB_F90TARGETFILE    = libffistr.a
FSTRLIBS                 = -lffistr -lfistr

HECMWLIBS                = -lfhecmw -lhecmw -lfhecmw

F90MODULEPOSTFIX         = mod
COBJFILEPOSTFIX          = o
CPPOBJFILEPOSTFIX        = o
F90OBJFILEPOSTFIX        = o

MV                       = mv -f
RANLIB                   = ranlib

DEBUG_OPTFLAGS           = -DDEBUG
NODEBUG_OPTFLAGS         = -DNDEBUG

BASE_CFLAGS              = -I.
BASE_CPPFLAGS            = -I.
BASE_F90FLAGS            = -I.

MPI_CFLAGS               = -I$(MPIINCDIR)
MPI_LDFLAGS              = -L$(MPILIBDIR) $(MPILIBS)
MPI_F90FLAGS             = -I$(MPIINCDIR)
MPI_F90LDFLAGS           = -L$(MPILIBDIR) $(MPILIBS)

HECMW_CFLAGS             = -I$(HECMWINCDIR)
HECMW_LDFLAGS            = -L$(HECMWLIBDIR) $(HECMWLIBS)
HECMW_CPPFLAGS           = -I$(HECMWINCDIR)
HECMW_CPPLDFLAGS         = -L$(HECMWLIBDIR) $(HECMWLIBS)
HECMW_F90FLAGS           = -I$(HECMWINCDIR)
HECMW_F90LDFLAGS         = -L$(HECMWLIBDIR) $(HECMWLIBS)

FSTR_CFLAGS              = -I$(FSTRINCDIR)
FSTR_LDFLAGS             = -L$(FSTRLIBDIR) $(FSTRLIBS)
FSTR_CPPFLAGS            = -I$(FSTRINCDIR)
FSTR_CPPLDFLAGS          = -L$(FSTRLIBDIR) $(FSTRLIBS)
FSTR_F90FLAGS            = -I$(FSTRINCDIR)
FSTR_F90LDFLAGS          = -L$(FSTRLIBDIR) $(FSTRLIBS)

METISLIBS                = -lmetis
METIS_CFLAGS             = -DHECMW_WITH_METIS -I$(METISINCDIR)
METIS_LDFLAGS            = -L$(METISLIBDIR) $(METISLIBS)
METIS_F90FLAGS           = -DHECMW_WITH_METIS -I$(METISINCDIR)
METIS_F90LDFLAGS         = -L$(METISLIBDIR) $(METISLIBS)

PARMETISLIBS             = -lparmetis -lmetis
PARMETIS_CFLAGS          = -I$(PARMETISINCDIR)
PARMETIS_LDFLAGS         = -L$(PARMETISLIBDIR) $(PARMETISLIBS)
PARMETIS_F90FLAGS        = -I$(PARMETISINCDIR)
PARMETIS_F90LDFLAGS      = -L$(PARMETISLIBDIR) $(PARMETISLIBS)

MUMPSLIBS                = -ldmumps -lmumps_common -lpord
MUMPS_CFLAGS             = -I$(MUMPSINCDIR)
MUMPS_LDFLAGS            = -L$(MUMPSLIBDIR) $(MUMPSLIBS)
MUMPS_F90FLAGS           = -I$(MUMPSINCDIR)
MUMPS_F90LDFLAGS         = -L$(MUMPSLIBDIR) $(MUMPSLIBS)

MLLIBS                   = -lml -lzoltan
ML_LDFLAGS               = -L$(MLLIBDIR) $(MLLIBS)
ML_F90LDFLAGS            = -L$(MLLIBDIR) $(MLLIBS)

MKLLIBS                  =
MKL_CFLAGS               = -I$(MKLINCDIR)
MKL_LDFLAGS              = -L$(MKLLIBDIR) $(MKLLIBS)
MKL_F90FLAGS             = -I$(MKLINCDIR)
MKL_F90LDFLAGS           = -L$(MKLLIBDIR) $(MKLLIBS)

REVOCAPLIBS              = -lrcapf
REVOCAP_F90FLAGS         = -I$(REVOCAPINCDIR)
REVOCAP_F90LDFLAGS       = -L$(REVOCAPLIBDIR) $(REVOCAPLIBS)

REFINERLIBS              = -lRcapRefiner
REFINER_CFLAGS           = -DHECMW_WITH_REFINER -I$(REFINERINCDIR)
REFINER_LDFLAGS          = -L$(REFINERLIBDIR) $(REFINERLIBS)
